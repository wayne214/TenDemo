<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wayne.tendemo.FontSettingActivity"
    >

    <TextView
        android:id="@+id/example_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:text="我已经老了，在人来人往的大厅，有一位老人他向我走来，他说我认识你，那时的你还很年轻，美丽，你的身边有许许多多的追求者，不过跟那时相比，我更喜欢现在你这经历了沧桑的容颜？"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="-《情人》"
        />

    <RadioGroup
        android:id="@+id/fontseting_rg"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >

        <RadioButton
            android:id="@+id/fontseting_s"
            style="@style/MainTabItem"
            android:drawableTop="@drawable/selector_item_font_setting_small"
            android:textSize="10sp"
            android:text="眼神儿好"
            />

        <RadioButton
            android:id="@+id/fontseting_m"
            style="@style/MainTabItem"
            android:drawableTop="@drawable/selector_item_font_setting_small"
            android:text="不大不小"
            android:textSize="10sp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/fontseting_l"
            style="@style/MainTabItem"
            android:drawableTop="@drawable/selector_item_font_setting_small"
            android:textSize="10sp"
            android:text="我要大大"
            />
    </RadioGroup>
</LinearLayout>
